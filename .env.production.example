# Production Environment Configuration
NODE_ENV=production

# Database (use strong credentials in production!)
POSTGRES_DB=japanese_learning
POSTGRES_USER=japanese_user
POSTGRES_PASSWORD=your-strong-password-here
POSTGRES_PORT=5432

# Redis
REDIS_PORT=6379

# Server ports
BACKEND_PORT=8000
NGINX_PORT=80
NGINX_SSL_PORT=443

# JWT Settings (MUST change in production!)
SECRET_KEY=your-very-strong-secret-key-here-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=Japanese Learning API

# CORS (restrict to your domains in production)
BACKEND_CORS_ORIGINS=["https://yourdomain.com","https://api.yourdomain.com"]

# Database URLs (auto-generated from above vars)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:${POSTGRES_PORT}/${POSTGRES_DB}
REDIS_URL=redis://localhost:${REDIS_PORT}/0

# File Storage
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=52428800  # 50MB

# OCR Service
OCR_MODEL_PATH=/app/models/paddleocr
OCR_LANGUAGES=["japan", "en"]

# Audio/AI Models
WHISPER_MODEL=base  # larger model for production
TTS_MODEL_PATH=/app/models/tts
AUDIO_UPLOAD_MAX_SIZE=10485760  # 10MB

# Security (add your domain)
ALLOWED_HOSTS=["yourdomain.com","api.yourdomain.com"]